---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class='w-full'>
    <header>
        <div class='flex pt-6 pb-2 mx-10'>
            <div class='flex justify-start w-1/12 lg:w-1/3'></div>
            <div class='flex justify-center items-center w-10/12 lg:w-1/3'>
                <p class='text-2xl uppercase'>{title}</p>
            </div>
            <div class='flex justify-end w-1/12 lg:w-1/3'>
                <svg
                    xmlns='http://www.w3.org/2000/svg'
                    width='25'
                    height='25'
                    fill='currentColor'
                    class='bi bi-cart'
                    viewBox='0 0 16 16'
                >
                    <path
                        d='M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2'
                    ></path>
                </svg>
            </div>
        </div>
    </header>
</div>
